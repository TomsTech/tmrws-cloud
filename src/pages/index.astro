<Layout title="TMRWS Cloud - Web Hosting That Responds">
  <!-- Nav -->
  <nav class="fixed top-0 w-full bg-white/90 backdrop-blur-sm border-b border-gray-100 z-50">
    <div class="max-w-6xl mx-auto px-4 py-4 flex justify-between items-center">
      <a href="/" class="text-xl font-bold text-gray-900">TMRWS<span class="text-green-600">.</span>cloud</a>
      <div class="flex items-center gap-6">
        <a href="#pricing" class="text-sm text-gray-600 hover:text-gray-900">Pricing</a>
